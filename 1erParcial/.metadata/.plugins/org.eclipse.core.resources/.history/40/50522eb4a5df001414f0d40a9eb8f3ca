package complejoYFraccion;

public class Complejo {

	private long real, img;
	
	public Complejo(){
		real = 0;
		img = 0; 
	}
	
	public Complejo(long real, long img){
		this.real = real;
		this.img = img;
	}
		
	public String toString(){
		return this.real+" + "+this.img+"i";
	}

	public Complejo sumar(Complejo c){
		return new Complejo(this.real + c.real, this.img + c.img);
	}
	
	public static Complejo sumar(Complejo c1, Complejo c2) {
		return new Complejo(c1.real + c2.real, c1.img + c2.img);
	}
	
	public Complejo sumar(long n){
		return new Complejo(this.real + n, this.img);
	}
	
	public static Complejo sumar(Complejo c, long n){
		return new Complejo(c.real + n, c.img);
	}
	
	public Complejo multiplicar(long num) {
		return new Complejo(this.real * num, this.img * num);
	}
	
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Complejo other = (Complejo) obj;
		if (img != other.img)
			return false;
		if (real != other.real)
			return false;
		return true;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Complejo c1 = new Complejo(3,1);
		Complejo c2 = new Complejo(1,1);
		Complejo c3,
				 c4,
				 c5;
		System.out.println(c1);
		System.out.println(c2);
		c3 = c2.sumar(c1);
		c4 = c2.multiplicar(5);
		c5 = sumar(c1, c2);
		System.out.println(c3);
		System.out.println(c4);
		System.out.println(c5);
	}
}
